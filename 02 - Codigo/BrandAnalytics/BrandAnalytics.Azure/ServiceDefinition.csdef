<?xml version="1.0" encoding="utf-8"?>
<ServiceDefinition name="BrandAnalytics.Azure" xmlns="http://schemas.microsoft.com/ServiceHosting/2008/10/ServiceDefinition" schemaVersion="2013-10.2.2">
