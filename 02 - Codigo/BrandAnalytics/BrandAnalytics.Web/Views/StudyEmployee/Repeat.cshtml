@model BrandAnalytics.Web.Models.StudySubmitModel

@{
    ViewBag.Title = "Repeat";
}

<h2>Submit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>StudySubmitModel</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Duration)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Duration) (Seconds)
            @Html.ValidationMessageFor(model => model.Duration)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Topics)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Topics) (; Separated)
            @Html.ValidationMessageFor(model => model.Topics)
        </div>

        <p>
            <input type="submit" value="Repeat" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
